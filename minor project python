import random

words = [
    'python', 'computer', 'programming', 'developer', 'database',
    'algorithm', 'machine', 'variable', 'function', 'software',
    'hardware', 'buffer', 'memory', 'fan'
]

print(" Welcome to the Word Guessing Game!")
print("Guess the word, one letter at a time.\n")


print("Select Difficulty Level:")
print("1. Easy (10 attempts, shorter words)")
print("2. Medium (7 attempts, medium-length words)")
print("3. Hard (5 attempts, long words)")

choice = input("Enter 1, 2, or 3: ")

if choice == "1":
    difficulty = "Easy"
    attempts = 10
    possible_words = [w for w in words if len(w) <= 6]
elif choice == "3":
    difficulty = "Hard"
    attempts = 5
    possible_words = [w for w in words if len(w) > 8]
else:
    difficulty = "Medium"
    attempts = 7
    possible_words = [w for w in words if 6 < len(w) <= 8]

word = random.choice(possible_words)
guessed_letters = []
display_word = ["_"] * len(word)

print(f"\nDifficulty: {difficulty}")
print(f"You have {attempts} attempts.\n")


while attempts > 0:
    print("Word:", " ".join(display_word))
    print("Guessed letters:", ", ".join(guessed_letters) if guessed_letters else "None")
    guess = input("Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print(" Please enter a single valid letter.\n")
        continue

    if guess in guessed_letters:
        print(" You already guessed that letter.\n")
        continue

    guessed_letters.append(guess)

    if guess in word:
        print(" Good guess!\n")
        for i in range(len(word)):
            if word[i] == guess:
                display_word[i] = guess
    else:
        attempts -= 1
        print(f" Wrong guess! Attempts left: {attempts}\n")

    if "_" not in display_word:
        print(" Congratulations! You guessed the word:", word)
        break
else:
    print(" Out of attempts! The word was:", word)

print("\nThanks for playing!")

